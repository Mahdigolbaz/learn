_share_backup()
{
    if ! command -v "share-backup" >/dev/null 2>&1; then
        return
    fi

    #defining local vars
    local cur prev words cword
    _init_completion || return

    #cur="${COMP_WORDS[COMP_CWORD]}"
    prev="${COMP_WORDS[COMP_CWORD-1]}"

    cmd="stop"

    case "${prev}" in
        -c) case "${cur}" in
                *)  COMPREPLY=($(compgen -W "${cmd}" -- ${cur})); _filedir; return ;;
            esac ;;
        stop) return ;;
    esac

    #general options
    case "${cur}" in
        --*) long_opts="$(share-backup -h 2>&1 | awk 'match($0,/--[0-9A-Za-z]* /) {print substr($0,RSTART,RLENGTH)}')"
             COMPREPLY=($(compgen -W "${long_opts}" -- ${cur}));  return ;;
        -*)  short_opts="$(share-backup -h 2>&1 | awk '/^ *-.+ / {sub(/,/, ""); print $1}')"
             COMPREPLY=($(compgen -W "${short_opts}" -- ${cur})); return ;;
        *)   COMPREPLY=($(compgen -W "${cmd}" -- ${cur})); _filedir; return ;;
    esac
} &&
complete -F _share_backup share-backup

