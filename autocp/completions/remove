_removecustom()
{
    if ! command -v "remove" >/dev/null 2>&1; then
        return
    fi

    local cur prev words cword
    _init_completion || return

    case "${cur}" in
    *) COMPREPLY=($( _xfunc dpkg _comp_dpkg_installed_packages ${cur}))
       return 0
       ;;
    esac
} &&
complete -F _removecustom remove purge

